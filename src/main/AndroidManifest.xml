<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- NFC permissions for RFID functionality -->
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.H_CAS">
        <!-- Login Activity - Launcher Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.H_CAS.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Admin Dashboard Activity -->
        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.H_CAS.NoActionBar" />

        <!-- Doctor Dashboard Activity -->
        <activity
            android:name=".DoctorDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.H_CAS.NoActionBar" />

        <!-- Nurse Dashboard Activity -->
        <activity
            android:name=".NurseDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.H_CAS.NoActionBar" />

        <!-- Pharmacist Dashboard Activity -->
        <activity
            android:name=".PharmacistDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.H_CAS.NoActionBar" />
    </application>

</manifest>