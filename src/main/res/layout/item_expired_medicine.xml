<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expiredMedicineCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/error_red">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/expiredMedicineNameText"
                android:text="Medicine Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/error_red" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/disposeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispose"
                android:textSize="12sp"
                app:icon="@drawable/ic_delete"
                app:iconSize="16dp"
                app:iconPadding="4dp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

        <!-- Medicine Details -->
        <TextView
            android:id="@+id/expiredExpiryDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expired: 2024-01-15"
            android:textSize="14sp"
            android:textColor="@color/error_red"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/expiredDosageText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dosage: 500mg"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/expiredStockQuantityText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stock: 50 units"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="end" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>








