<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/nav_header_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Clean horizontal layout for profile and logo -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- Profile Section (Left) -->
        <LinearLayout
            android:id="@+id/profileSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_alignParentStart="true">

            <!-- Profile Avatar -->
            <ImageView
                android:id="@+id/doctorAvatarImageView"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_doctor_avatar"
                android:background="@drawable/doctor_avatar_background"
                android:scaleType="centerCrop" />

            <!-- Name and Role -->
            <TextView
                android:id="@+id/doctorNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/doctorRoleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Doctor"
                android:textColor="@color/nav_header_subtitle"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- App Logo - Right Edge -->
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/profileSection"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="HCAS Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_hcas_logo" />

    </RelativeLayout>

</LinearLayout>
